{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["error", "ignorePackages"],
        "no-plusplus": "off",
        "no-restricted-syntax": ["error", "ForInStatement"],
        "no-continue": "off",
        "no-await-in-loop": "off"
    }
}
